{% extends "AppBundle::layout.html.twig" %}

{% block header_comm %}
    {% include "AppBundle:Account:parts/header.html.twig" %}
{% endblock %}


{% block content %}
<div id="content" class="public-profile-content">
	<div class="row">
		<div class="container">

				<aside class="col-md-2">
					<div id="map-mini" class="user-location-map" style="height: 160px; width: 160px;"></div>
                                        <input id="address" type="hidden" value="{{user.city}}">
					<div class="left-item-wrap">
						<h3 class="title">{{'registration.profile'|trans}}</h3>
								<div class="active left-list-item">{{'aside.overview'|trans}}</div>
								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'aside.my_bussiness_communities'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'aside.my_individual_informations'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'aside.my_bussiness_informations'|trans}}</a> </div>


					</div>
					<div class="left-item-wrap">
						<h3 class="title">{{'user_wall.Recent_activity'|trans}}</h3>
								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Connections'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Following'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Updates_feed'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Opportunities'|trans}}</a> </div>

                        <div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Events'|trans}}</a> </div>

					</div>
					<div class="invite-wrap">
						<a class="mnv-disabled invite-btn" href="javascript:;">
							<span class="icon icon-invite"></span>

							{{'user_wall.Invite'|trans}}
						</a>

					</div>
				</aside>

			<div class="col-md-7 edit-page">
				<div class="row">
					<div class="edit-header">
						<a class="complete-profile" href="javascript:;">Complete your profile</a>
						<div class="progres-wrap">
						<p>Completion</p>
							<div class="progres-bar">
								<div class="progres" style="width: 30%"></div>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<div class="edit-content">
						<h2 class="title">My business communities</h2>
						<span class="icon icon-edit"></span>
						<div class="clearfix"></div>

						<div class="edit-wrap">
							<div class="my-bc clearfix">
								<p>Toulouse Business Community - France</p>
								<a href="javascript:;"> Remove</a>
							</div>
							<div class="my-bc clearfix">
								<p>Barselona Business Community - Spain</p>
								<a href="javascript:;"> Remove</a>
							</div>
						<div class="clearfix"></div>
						<div class="select-community">
							<p class="title">Do you want add other cities?</p>
							<div class="select-holder">
								<select name="country" id="">
									<option value="">Select a county</option>
									<option value=""></option>
									<option value=""></option>
								</select>
								<span class="icon icon-edit hide-icon-edit"></span>
							</div>
							<div class="select-holder">
								<select name="area" id="">
									<option value="">Select an urban area</option>
									<option value=""></option>
									<option value=""></option>
								</select>
								<span class="icon icon-edit hide-icon-edit"></span>
							</div>


						</div>

					</div>
					</div>


				</div>
			</div>

			{% include 'AppBundle:Account:parts/aside.html.twig' %}

		</div>
            </div>
	</div>

{% endblock %}

{% block javascript %}
<script src="https://maps.googleapis.com/maps/api/js?key={{googleApiKey}}"
    async defer></script>
    {{parent()}}
<script src="/js/map.js"></script>
{% endblock %}
