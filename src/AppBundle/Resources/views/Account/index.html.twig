                                                </div>
                                                <div class="post-tab-content"><select name="community[]" multiple required>
                                                    <option value="all">{{'user_wall.all_my_communities'|trans}}</option>
                                                    {% for item in comm %}
                                                        <option value="{{item.id}}">{{item.name}}</option>
                                                    {% endfor %}
                                                </select></div>

                                                <div class="clearfix"></div>
