                                                    <button class="submit-event" type="submit">
                                                            <span class="icon-publish_icon icon"></span>
                                                    {{'user_wall.Publish'|trans}}</button>
                                                </div>
                                                <div class="clearfix"></div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                        {% include 'AppBundle:Account:post.html.twig' with {'from' : 'user', 'user': 'x'} %}
                </div>
            </div>
        </div>
        <div class="col-md-3">

            {% include 'AppBundle:Account:parts/profileRightAside.html.twig' with {'showMembers' : true } %}

        </div>
    </div>
    {% if not is_granted('ROLE_MEMBER') %}

        {% include "AppBundle:Register:finalModal.html.twig" with {'confirmed': false } %}

    {% endif %}

    {% if is_granted('ROLE_MEMBER') and app.session.flashBag.get('registration_success') %}
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div style="display: none;" class="flash-notice">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% include "AppBundle:Register:finalModal.html.twig" with {'confirmed': true } %}

    {% endif %}

{% endblock %}

