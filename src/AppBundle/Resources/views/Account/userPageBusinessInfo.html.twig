{% extends "AppBundle::layout.html.twig" %}

{% block header_comm %}
    {% include "AppBundle:Account:parts/header.html.twig" %}
{% endblock %}


{% block content %}
<div id="content" class="public-profile-content">
	<div class="row">
		<div class="container">

				<aside class="col-md-2">
					<div id="map-mini" class="user-location-map" style="height: 160px; width: 160px;"></div>
                                        <input id="address" type="hidden" value="{{user.city}}">
					<div class="left-item-wrap">
						<h3 class="title">{{'registration.profile'|trans}}</h3>
						<div class="left-list-item">
	                        <a href="#tab-1" data-trigger-toggle="tab-1" class="active">{{'aside.overview'|trans}}</a>
	                        <a href="#tab-2" data-trigger-toggle="tab-2">{{'aside.my_bussiness_communities'|trans}}</a>
	                        <a href="#tab-3" data-trigger-toggle="tab-3">{{'aside.my_individual_informations'|trans}}</a>
	                        <a href="#tab-4" data-trigger-toggle="tab-4">{{'aside.my_bussiness_informations'|trans}}</a>
	                    </div>
					</div>
					<div class="left-item-wrap">
						<h3 class="title">{{'user_wall.Recent_activity'|trans}}</h3>
								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Connections'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Following'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Updates_feed'|trans}}</a> </div>

								<div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Opportunities'|trans}}</a> </div>

                        <div class="left-list-item"><a href="javascript:;" class="mnv-disabled">{{'user_wall.Events'|trans}}</a> </div>

					</div>
					<div class="invite-wrap">
						<a class="mnv-disabled invite-btn" href="javascript:;">
							<span class="icon icon-invite"></span>

							{{'user_wall.Invite'|trans}}
						</a>

					</div>
				</aside>

			<div class="col-md-7 edit-page">
				<div class="row">
					<div class="edit-header">
						<a class="complete-profile" href="javascript:;">Complete your profile</a>
						<div class="progres-wrap">
						<p>Completion</p>
							<div class="progres-bar">
								<div class="progres" style="width: 30%"></div>
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<form class="edit-content" method="post" action="{{path('edit-info')}}">
						<h2 class="title">My business informations</h2>
						<span class="icon icon-edit"></span>
						<div class="clearfix"></div>

						<div class="edit-wrap clearfix">
							<div class="edit-profiling-wrap">
								<p></p>
								<div class="table-cell">
									<p class="title-edit">General informations</p>
								</div>
							</div>

							<div class="edit-profiling-wrap">
								<p>Organisation's name</p>
								<div class="input-holder">
									<input name="organisation"  type="text" value="{{user.inform.organisation}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Type</p>
								<div class="select-holder">
									<select name="orgType" id="">
	                                                                    <option value="Type1">Type</option>
	                                                                    <option value="Type2">Type2</option>
									</select>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Size</p>
								<div class="select-holder">
									<select name="orgSize" id="">
	                                                                    <option value="size1">Size</option>
	                                                                    <option value="size2">Size2</option>
									</select>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
						</div>
						<div class="edit-wrap clearfix">
							<div class="edit-profiling-wrap">
								<p></p>
								<div class="table-cell">
									<p class="title-edit">My activity</p>
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Summary</p>
								<div class="textarea-holder">
									<textarea name="summary" id=""  rows="4">{{user.inform.summary}}</textarea>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Business area</p>
								<div class="select-holder">
									<select name="businessArea" id="">
	                                                                        <option value="BA1">Business area</option>
	                                                                        <option value="BA2">Business area2</option>
									</select>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Industry</p>
								<div class="select-holder">
									<select name="industry" id="">
	                                                                    <option value="Industry1">Industry1</option>
	                                                                    <option value="Industry2">Industry2</option>
									</select>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Clients</p>
								<div class="select-holder">
									<select name="clients" id="">
	                                                                    <option value="Client1">Clients</option>
	                                                                    <option value="Client2">Clients2</option>
									</select>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Businessnetworks & clubs</p>
								<div class="input-holder">
									<input name="clubs"  type="text" value="{{user.inform.clubs}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
						</div>
						<div class="edit-wrap clearfix">
							<div class="edit-profiling-wrap">
								<p></p>
								<div class="table-cell">
									<p class="title-edit">Interested in</p>
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>...</p>
								<div class="select-holder">
									<select name="interestedIn" id="">
	                                                                    <option value="Int1">Interested in</option>
	                                                                    <option value="Int2">Interested in2</option>
									</select>
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>

						</div>
						<div class="edit-wrap clearfix">
							<div class="edit-profiling-wrap">
								<p></p>
								<div class="table-cell">
									<p class="title-edit">Internet</p>
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>LinkedIn</p>
								<div class="input-holder">
									<input name="linkedIn"  type="text" value="{{user.linkedIn}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>twitter</p>
								<div class="input-holder">
									<input name="twitter"  type="text" value="{{user.inform.twitter}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Youtube channel</p>
								<div class="input-holder">
									<input name="youtube"  type="text" value="{{user.inform.youtube}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Facebook</p>
								<div class="input-holder">
									<input name="facebook"  type="text" value="{{user.inform.facebook}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p>Websites</p>
								<div class="input-holder">
									<input name="website"  type="text" value="{{user.inform.website}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
						</div>
						<div class="edit-wrap clearfix">
							<div class="edit-profiling-wrap">
								<p></p>
								<div class="table-cell">
									<p class="title-edit">Documentation center</p>
								</div>
							</div>
							<div class="edit-profiling-wrap">
								<p></p>
								<div class="input-holder">
									<input name="docs" type="text" value="{{user.inform.docs}}">
									<span class="icon icon-edit hide-icon-edit">
								</div>
							</div>
						</div>
                                                <div class="wrap-button"><button class="submit submit-save" type="submit">Save</button></div>

					</form>


				</div>
			</div>

			{% include 'AppBundle:Account:parts/aside.html.twig' %}

		</div>
            </div>
	</div>

{% endblock %}

{% block javascript %}
<script src="https://maps.googleapis.com/maps/api/js?key={{googleApiKey}}"
    async defer></script>
    {{parent()}}
<script src="/js/map.js"></script>
{% endblock %}
